<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.G3Tech.PileDriver">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PileDriver"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name="com.G3Tech.PileDriver.SurvDetection"></activity>
        <activity android:name="com.G3Tech.PileDriver.HS2_0Mode" />
        <activity android:name="com.G3Tech.PileDriver.surveyReportArea" />
        <activity android:name="com.G3Tech.PileDriver.stop_collection" />
        <activity android:name="com.G3Tech.PileDriver.CollectionArea" />
        <activity android:name="com.G3Tech.PileDriver.Correlation_AreaTool" />
        <activity android:name="com.G3Tech.PileDriver.Collect_SurveryTool" />
        <activity android:name="com.G3Tech.PileDriver.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.G3Tech.PileDriver.browserActivity" />
        <activity android:name="com.G3Tech.PileDriver.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>