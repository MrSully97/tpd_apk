<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stop_collection">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        tools:context=".CollectionArea"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-430dp">

        <Button
            android:id="@+id/viewSurveyBut"
            android:layout_width="263dp"
            android:layout_height="75dp"
            android:layout_marginTop="44dp"
            android:hapticFeedbackEnabled="false"
            android:text="Create/View Survey Reports"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/createCorBut"
            android:layout_width="263dp"
            android:layout_height="75dp"
            android:layout_marginTop="28dp"
            android:hapticFeedbackEnabled="false"
            android:text="Create a Correlation Report"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSurveyBut" />

        <Button
            android:id="@+id/startSurveyBut"
            android:layout_width="263dp"
            android:layout_height="75dp"
            android:layout_marginTop="28dp"
            android:hapticFeedbackEnabled="false"
            android:text="Start a Survey/Collect"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createCorBut" />

        <Button
            android:id="@+id/startCorBut"
            android:layout_width="263dp"
            android:layout_height="75dp"
            android:layout_marginTop="28dp"
            android:hapticFeedbackEnabled="false"
            android:text="Start a Correlation Collect"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startSurveyBut" />

        <Button
            android:id="@+id/goBackBut"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:background="@android:drawable/ic_menu_revert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="228dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:text="Collection Stopped"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="274dp"
            android:layout_height="81dp"
            android:layout_marginTop="32dp"
            android:text="You have stopped collecting"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>