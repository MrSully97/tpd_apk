<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="600dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="362dp"
            android:layout_height="90dp"
            android:layout_weight="0.5"
            android:minHeight="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/collectSurvBut"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_data"
                    android:drawablePadding="-5dp"
                    android:text="Collect/Survey Mode"
                    android:textColor="@android:color/background_light"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/correlationBut"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_correlation"
                    android:drawablePadding="-5dp"
                    android:text="Correlation Mode"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/HS2_0But"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_hotspot"
                    android:drawablePadding="-20dp"
                    android:text="HS2.0 Mode"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/surveillanceBut"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_surveillance"
                    android:drawablePadding="-14dp"
                    android:text="Surveillance Detection Mode"
                    android:textColor="@android:color/background_light"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/gpsBut"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_geofence"
                    android:drawablePadding="-12dp"
                    android:text="GPS QUICK CHECK" />

                <Button
                    android:id="@+id/blueForceBut"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_surveillance"
                    android:drawablePadding="-12dp"
                    android:text="Target/Blue Force Area"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="359dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/downReportsBut"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_report"
                    android:drawablePadding="-10dp"
                    android:text="Download Reports"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/but8"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_report"
                    android:drawablePadding="2dp"
                    android:text="Quick View Reports on Device"
                    android:textColor="@android:color/background_light"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/orgFilesBut"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_data"
                    android:drawablePadding="-9dp"
                    android:text="Organize Files"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/organizeRepBut"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_data"
                    android:drawablePadding="4dp"
                    android:text="Organize Reports"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/but10"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_tpms"
                    android:drawablePadding="-14dp"
                    android:text="TPMS"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/but11"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_sim"
                    android:drawablePadding="-13dp"
                    android:text="IMSI"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="363dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but12"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_shutdown"
                    android:text="Shutdown"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/but13"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_button"
                    android:drawableTop="@mipmap/ic_skull"
                    android:text="Zeroize"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>