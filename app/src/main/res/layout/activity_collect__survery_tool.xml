<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".Collect_SurveryTool">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:text="Survey Collection"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="322dp"
        android:layout_height="54dp"
        android:text="Avoid spaces and special characters. Use underscores for spaces."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="246dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:hapticFeedbackEnabled="false"
        android:text="Please choose a filename"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/fileField"
        android:layout_width="354dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="File Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/submitBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/gpsBut"
        android:layout_width="258dp"
        android:layout_height="75dp"
        android:hapticFeedbackEnabled="false"
        android:text="Quick Check GPS popup"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/stopBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitBut" />

    <Button
        android:id="@+id/stopBut"
        android:layout_width="258dp"
        android:layout_height="75dp"
        android:hapticFeedbackEnabled="false"
        android:text="Stop Collection"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/reportBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpsBut" />

    <Button
        android:id="@+id/reportBut"
        android:layout_width="263dp"
        android:layout_height="75dp"
        android:hapticFeedbackEnabled="false"
        android:text="Go to Survey/Collection Reports Area"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopBut" />

    <Button
        android:id="@+id/submitBut"
        android:layout_width="258dp"
        android:layout_height="75dp"
        android:hapticFeedbackEnabled="false"
        android:text="Submit Filename/Start Collection"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gpsBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fileField" />

    <Button
        android:id="@+id/goBackBut"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:background="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="94dp"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266" />

</androidx.constraintlayout.widget.ConstraintLayout>